<% include ./partials/header %>
<h1>index page!</h1>

<% blogs.forEach(function(blog){ %>
    <div>
        <h2><%=blog.title%></h2>
        <img src="<%= blog.image %>">
        <span><%= blog.created %></span>
        <p><%= blog.body %></p>
        <a href="/blogs/<%= blog._id %>">Read More</a>
        <!--gets the id to go the page of the show request -->
    </div>
<% }) %>
<% include ./partials/footer %>